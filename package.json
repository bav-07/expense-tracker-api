{
  "name": "expense-tracker",
  "private": true,
  "workspaces": ["server", "web"],
  "scripts": {
    "dev": "concurrently -n WEB,API -c blue,green \"npm:dev:web\" \"npm:dev:server\"",
    "dev:web": "npm --prefix web run dev",
    "dev:server": "npm --prefix server run dev",
    "build": "npm --prefix server run build && npm --prefix web run build",
    "start": "concurrently -n WEB,API -c blue,green \"npm:start:web\" \"npm:start:server\"",
    "start:web": "npm --prefix web run start",
    "start:server": "npm --prefix server run start",
    "lint": "npm --prefix server run lint && npm --prefix web run lint",
    "test": "npm --prefix server run test"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "eslint": "^9.12.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0"
  }
}
